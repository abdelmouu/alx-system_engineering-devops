#!/usr/bin/env bash

# Update package lists
apt-get update -y

# Install nginx
apt-get install -y nginx

# Configure nginx to listen on port 80 and display 'Hello World!'
echo 'server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}' > /etc/nginx/sites-available/default

# Remove default nginx index.html
rm /var/www/html/index.nginx-debian.html

# Create index.html with 'Hello World!'
echo 'Hello World!' > /var/www/html/index.html

# Restart nginx
service nginx restart

# Test the server
if curl -s 34.207.221.54 | grep -q 'Hello World!'; then
    echo "Nginx is running and serving 'Hello World!' on 34.207.221.54"
else
    echo "Error: Nginx is not serving 'Hello World!' on 34.207.221.54"
fi
